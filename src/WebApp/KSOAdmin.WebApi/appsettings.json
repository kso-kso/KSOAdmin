{
  "urls": "https://*:8101", //web服务端口，如果用IIS部署，把这个去掉
  "Logging": {
    "LogLevel": {
      "Default": "Information", //加入Default否则log4net本地写入不了日志
      "KSOAdmin.AuthHelper.ApiResponseHandler": "Error"
    },
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning",
        "Microsoft.Hosting.Lifetime": "Debug"
      }
    }
  },
  "JWTTokenOptions": {
    "Audience": "http://localhost:5200",
    "SecurityKey": null,
    "Issuer": "http://localhost:5200"
  },
  "RedisConfigInfo": {
    "WriteServerList": "60.205.178.29:6379,password=kso1234,SyncTimeout=15000", // 可写的Redis链接地址
    "ReadServerList": "60.205.178.29:6379,password=kso1234,SyncTimeout=15000", // 可读的Redis链接地址
    "MaxWritePoolSize": 60, // 最大写链接数
    "MaxReadPoolSize": 60, // 最大读链接数
    "LocalCacheTime": 180, // 本地缓存到期时间，单位:秒
    "AutoStart": true, // 自动重启
    "DefaultDb": 1
  },
  "AppSettings": {
    "Redis":  true,
    "LogAOP":  false
  },
  "DBString": [
    {
      "ConnId": "MySql",
      "DBType": 1,
      "IsEnable": true,
      "Connection": "Data Source=60.205.178.29;Database=KSOAdmin;AllowLoadLocalInfile=true;User ID=root;Password=kso1234;allowPublicKeyRetrieval=true;pooling=true;CharSet=utf8;port=3306;sslmode=none;"
    },
    {
      "ConnId": "SqlServer",
      "DBType": 0,
      "IsEnable": false,
      "Connection": "Data Source=.;Initial Catalog=KSOAdmin;Persist Security Info=True;User ID=sa;Password=123456;Connect Timeout=500;"
    }
  ],
  "Startup": {
    "Cors": "AllowCors", //策略名称
    "IdentityServer4": {
      "AuthorizationUrl": "http://localhost:5004", // 认证中心域名
      "ApiName": "KSOAdmin", // 资源服务器
      "CorsUrls": "http://localhost:8103,http://127.0.0.1:8103",
      "ExpMinutes": "30" //有效期(分钟=默认30),
    },
    "AppConfigAlert":  true // 自定义日志是否启用
  }
}
